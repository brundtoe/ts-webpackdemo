{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["dom","es2020"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2020",
    "allowJs": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}
